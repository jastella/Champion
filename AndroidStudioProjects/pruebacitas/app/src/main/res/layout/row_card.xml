<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/ivLogo"
            android:src="@drawable/ic_cita"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Peluque"
            android:layout_marginLeft="10dp"
            android:layout_marginTop ="10dp"
            android:id="@+id/tvGestor"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivLogo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Agenda1"
            android:layout_marginLeft="0dp"
            android:layout_marginTop ="5dp"
            android:id="@+id/tvAgenda"
            android:layout_toRight="@id/ivLogo"
            android:layout_below="@+id/tvGestor"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Fecha"
            android:layout_marginLeft="10dp"
            android:layout_marginTop ="5dp"
            android:id="@+id/tvFecha"
            android:layout_toRight="@id/ivLogo"
            android:layout_below="@+id/tvAgenda"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Hora"
            android:layout_marginLeft="10dp"
            android:id="@+id/tvHora"
            android:layout_toRight="@id/ivLogo"
            android:layout_below="@+id/tvFecha"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>